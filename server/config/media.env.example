# Media Storage Configuration
# Copy these to your .env file and update values

# Storage mode: 'local' or 'remote'
# - local: Files stay on VPS (default)
# - remote: Files are migrated to Hostinger after AI processing
MEDIA_MODE=remote

# Local storage path (default: ./uploads relative to project)
MEDIA_UPLOAD_LOCAL_BASE=/var/www/carpetree.com/server/uploads

# Hostinger (Remote) Storage Configuration
# Replace with your Hostinger domain and paths
MEDIA_REMOTE_BASE_URL=https://media.carpetree.com/media
MEDIA_REMOTE_UPLOAD_URL=https://media.carpetree.com/media-api/receive.php

# Secure token for upload authorization (generate a random string)
# Use: openssl rand -hex 32
MEDIA_REMOTE_AUTH_TOKEN=your_secure_random_token_here

# Whether to delete local files after successful upload (true/false)
MEDIA_DELETE_LOCAL_AFTER_UPLOAD=true

# Connection timeouts (seconds)
MEDIA_REMOTE_CONNECT_TIMEOUT_SECS=10
MEDIA_REMOTE_TIMEOUT_SECS=120
