# Database Configuration
DB_HOST=localhost
DB_NAME=carpe_tree_quotes
DB_USER=your_db_username
DB_PASS=your_db_password

# SMTP Configuration (Hostinger)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=your_email@yourdomain.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@carpetree.com

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google OAuth (for Calendar API)
GOOGLE_OAUTH_JSON=path/to/google-credentials.json

# Admin Configuration
ADMIN_EMAIL=admin@carpetree.com
ADMIN_URL=https://yourdomain.com/admin

# Site Configuration
SITE_URL=https://yourdomain.com

# File Upload Limits
MAX_FILE_SIZE=104857600
UPLOAD_PATH=uploads/

# Security
SESSION_LIFETIME=3600
BCRYPT_ROUNDS=12 